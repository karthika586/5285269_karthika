#include <stdio.h>
#include <stdlib.h>


int compare(const void *a, const void *b) {
    return (*(int *)a - *(int *)b);
}

int hackerlandRadioTransmitters(int x[], int n, int k) {
    
    qsort(x, n, sizeof(int), compare);

    int i = 0;
    int transmitters = 0;

    while (i < n) {
        transmitters++;   
        int loc = x[i] + k;
        while (i < n && x[i] <= loc) {
            i++;
        }

        
        loc = x[i - 1] + k;

        
        while (i < n && x[i] <= loc) {
            i++;
        }
    }

    return transmitters;
}

int main() {
    int n, k;
    scanf("%d %d", &n, &k);

    int x[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &x[i]);
    }

    int result = hackerlandRadioTransmitters(x, n, k);
    printf("%d\n", result);

    return 0;
}
